<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Payment">
    <include layout="@layout/toolbar"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:src="@drawable/progresspayment" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="13dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="#F8EBF6"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/purple"
            android:text="Full Name"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/ed_full_name"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext"
            android:drawableRight="@drawable/name"
            android:drawablePadding="10dp"
            android:paddingLeft="20dp"
            android:maxLines="1"
            android:inputType="text"
            android:paddingRight="20dp"
            android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/purple"
                android:text="Email ID"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/ed_email_id"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawableRight="@drawable/mail"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="20dp"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/purple"
                android:text="Phone"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawableRight="@drawable/phone"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:maxLines="1"
                android:inputType="text"
                android:paddingRight="20dp"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/purple"
                android:text="Parcel"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/ed_parcel"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext"
                android:drawableRight="@drawable/parcel"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:maxLines="1"
                android:inputType="number"
                android:paddingRight="20dp"
                android:textSize="15sp" />
            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttoncolor"
                android:text="Pay"
                android:id="@+id/pay"
                android:textColor="@color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>