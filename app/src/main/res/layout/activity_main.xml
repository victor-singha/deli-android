<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">


<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <include layout="@layout/toolbarwithhamburger"/>

<ScrollView
    android:layout_marginTop="57dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:src="@drawable/progresspickup" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="16dp"
            android:text="LOCATION"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="13dp"
            app:cardCornerRadius="5dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#F8EBF6"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="PICKUP"
                    android:textSize="15sp" />

                <EditText
                    android:textStyle="bold"
                    android:id="@+id/ed_pick_location"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext"
                    android:drawableRight="@drawable/loc"
                    android:paddingLeft="20dp"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    android:paddingRight="20dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="DROPOFF" />

                <EditText
                    android:id="@+id/ed_drop_location"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext"
                    android:drawableRight="@drawable/loc"
                    android:paddingLeft="20dp"
                    android:maxLines="1"
                    android:inputType="textCapSentences"
                    android:paddingRight="20dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="DATE" />

                <EditText
                    android:id="@+id/date_time_input"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext"
                    android:drawableRight="@drawable/cal"
                    android:hint="dd/mm/yyyy"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="text"
                    android:paddingRight="20dp"
                    android:maxLines="1"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="SELECT TRANSPORTATION"
                    android:textSize="15sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="39dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/boxtruck"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_marginLeft="8dp"
                                android:text="Box Truck" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="$49.99" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20 Big Box Items"
                                    android:textSize="10dp"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_boxt"
                                android:layout_marginRight="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cargovan"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_marginLeft="8dp"
                                android:text="Cargo Van" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_height="match_parent"
                                    android:text="$39.99" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12 Big Box Items"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_cargovan"
                                android:layout_marginRight="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/minivan"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_marginLeft="8dp"
                                android:text="Mini Van" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:text="$29.99" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="8 Big Box Items"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_minivan" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/car"
                            tools:background="@drawable/selected"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_marginLeft="8dp"
                                android:text="Car" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textStyle="bold"
                                    android:layout_height="wrap_content"
                                    android:text="$19.99" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4 Big Box Items"
                                    android:textSize="10dp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_car" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:background="@drawable/buttoncolor"
            android:text="Next"
            android:id="@+id/next"
            android:textColor="@color/black" />


    </LinearLayout>

</ScrollView>
</FrameLayout>


</androidx.drawerlayout.widget.DrawerLayout>